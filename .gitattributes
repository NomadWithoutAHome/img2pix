# Set default behavior to automatically normalize line endings
* text=auto

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.tiff binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary

# Python specific attributes
*.py linguist-language=Python
*.pyw linguist-language=Python

# Documentation
*.md linguist-documentation
*.rst linguist-documentation
README* linguist-documentation

# Configuration files
*.ini text
*.cfg text
*.conf text
requirements.txt text

# Ignore generated files in language statistics
__pycache__/ linguist-generated
*.pyc linguist-generated
*.pyo linguist-generated
*.pyd linguist-generated
